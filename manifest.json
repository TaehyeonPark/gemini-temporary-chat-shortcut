{
    "manifest_version": 3,
    "name": "Gemini Temporary Chat Shortcut",
    "description": "Open Gemini temporary chat instantly with Option+Shift+N (macOS) / Alt+Shift+N (Windows/Linux). No data collected.",
    "homepage_url": "https://github.com/TaehyeonPark/gemini-temporary-chat-shortcut",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.gemini.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}